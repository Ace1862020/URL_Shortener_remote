<div class="container p-3">

  <div class="text-center my-5">
    <h1>URL Shortener</h1>
  </div>

  <div class="text-center">
    <a href="/">
      <i class="fas fa-link fa-9x" style="color:mediumaquamarine;"></i>
    </a>
  </div>

  <div class="d-flex justify-content-between my-5">
    {{#unless urlData.shortUr}}
    <h3 style="color: firebrick;">Oops!! Please enter the correct link!!</h3>
    {{/unless}}

    {{#if urlData.shortUr}}
    <h3> Success!! Please use this linkï¼š</h3>
    {{/if}}
  </div>


  <div class="p-3 mb-2 text-dark rounded-3" style="background-color: transparent;">
    <a href="{{urlData.hostUrl}}" style="text-decoration: none;">
      <h3 style="color: deepskyblue;">{{urlData.shortUrl}} </h3>
    </a>
  </div>

  <!-- if Success show copy Button -->
  {{#if urlData.shortUr}}
  <div class="d-flex justify-content-between my-5">
    <button class="btn btn-primary" type="submit">copy</button>
    <a href="/" class="btn btn-secondary">Back</a>
  </div>
  {{/if}}

  <!-- if Opss show back Button -->
  <!-- else shorten Button #unless option.shortName-->
  {{#unless url.Data.shortUrl}}
  <div class="d-flex justify-content-center my-5">
    <a href="/" class="btn btn-secondary">Back</a>
  </div>
  {{/unless}}
</div>