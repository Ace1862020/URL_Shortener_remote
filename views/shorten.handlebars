<div class="container p-3">
  <div class="row justify-content-center">
    <div class="col-8 text-center my-5">
      <h1>URL Shortener</h1>
    </div>

    <div class="col-8 text-center">
      <a href="/">
        <i class="fas fa-link fa-9x" style="color:mediumaquamarine;"></i>
      </a>
    </div>

    <div class="col-8 d-flex justify-content-center my-5">
      {{#ifEqual bodyData.status 'success'}}
      <h3> Success!! Please use this linkï¼š</h3>
      {{/ifEqual}}
      {{#ifEqual bodyData.status 'failure'}}
      <h3 style="color: firebrick;">Oops!! Please enter the correct link!!</h3>
      {{/ifEqual}}
    </div>

    {{#if bodyData.shortUrl}}
    <div class="col-8 d-flex justify-content-center mb-2 rounded-3" style="background-color: transparent;">
      <div class="input-group input-group-lg ">
        <input type="url" id="copy-url" class="form-control" style="font-weight: bold; color: deepskyblue;"
          value="http://localhost:3000/shorten/{{bodyData.shortUrl}}" required>
      </div>
    </div>
    {{/if}}

    <!-- if Success show copy Button -->
    {{#ifEqual bodyData.status 'success'}}
    <div class="col-8 d-flex justify-content-between my-5">
      <button onclick="copyOnclick()" type="button" class="btn btn-primary" id="copy-btn">Copy</button>
      <a href="/" class="btn btn-secondary">Back</a>
    </div>
    {{/ifEqual}}

    <!-- if Opss show back Button -->
    <!-- else shorten Button #unless option.shortName-->
    {{#ifEqual bodyData.status 'failure'}}
    <div class="col-8 d-flex justify-content-center my-5">
      <a href="/" class="btn btn-secondary">Back</a>
    </div>
    {{/ifEqual}}
  </div>
</div>